@page "{id:min(1)}"
@model mehdiskan.web.Pages.Admin.Carousels.DeleteModel
@{
    ViewBag.Title = "Delete carousel";
}


@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger">
        <i class="fa fa-exclamation-circle fa-fw"></i> @ViewData["Message"]
    </div>
}

<a asp-page="Index" class="btn btn-primary border border-info text-capitalize my-4">
    <i class="fa fa-truck-left fa-fw"></i> Back to list
</a>

<div class="card border-secondary mb-3">

    <div class="card-header text-capitalize">
        <i class="fa fa-plus fa-fw"></i> @ViewBag.Title
    </div>

    <div class="card-body">

        <form method="post" autocomplete="off" enctype="multipart/form-data">


            <div class="table-responsive">

                <table class="table table-borderless table-striped table-hover">

                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Image</th>
                            <th scope="col">Alt</th>
                            <th scope="col">Preview</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>@Model.Carousel.CarouselId</td>
                            <td>
                                ~/images/carousels/@Model.Carousel.ImageName
                            </td>
                            <td>Carousel.Alt</td>
                            <td>
                                <img src="~/images/carousels/@Model.Carousel.ImageName" alt="@Model.Carousel.Alt" style="width:200px" asp-append-version="true" class="rounded mx-4 fixed-width-image-75 small" />
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-plus fa-fw"></i> Delete
                </button>
            </div>

        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

