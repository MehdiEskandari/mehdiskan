@page
@model mehdiskan.web.Pages.Admin.Carousels.IndexModel
@{
    ViewBag.Title = "Carousels list";
}


<section>

    <h1 class="text-capitalize display-4 mb-5">@ViewBag.Title</h1>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="fa fa-check fa-fw"></i> @TempData["Success"]
        </div>
    }


    <div class="clearfix">
        <a asp-page="Create" class="btn btn-primary text-capitalize float-left mb-3">
            <i class="fa fa-plus fa-fw"></i>Add new
        </a>

        <button type="button" class="btn btn-outline-primary float-right mb-3">
            <i class="fa fa-th-list fa-fw"></i>@Model.CarouselCount
        </button>
    </div>


    @if (Model.Carousels.Any())
    {

        <div class="table-responsive">

            <table class="table table-borderless table-striped table-hover">

                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Alt</th>
                        <th scope="col">Operation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Carousel carousel in Model.Carousels)
                    {
                        <tr>
                            <td>@carousel.CarouselId</td>
                            <td>
                                <img src="~/images/carousels/@carousel.ImageName" alt="@carousel.Alt" class="rounded fixed-width-image-75"  />
                            </td>
                            <td>@carousel.Alt</td>
                            <td>
                                <a asp-page="Edit"
                                   asp-route-id="@carousel.CarouselId"
                                   class="btn btn-sm btn-outline-warning">
                                    <i class="fa fa-pen fa-fw"></i> Edit
                                </a>

                                <a asp-page="Delete"
                                   asp-route-id="@carousel.CarouselId"
                                   class="btn btn-sm btn-outline-danger">
                                    <i class="fa fa-trash-alt fa-fw"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    }
    else
    {
        <div class="alert alert-primary border border-warning">
            <p class="mb-0">
                <i class="fa faa-exclamation-triangle fa-fw"></i> No EyeColor Exist.
            </p>
        </div>
    }



    <div>
        <ul class="pagination pagination-sm justify-content-center my-3">
            <li class="page-item disabled">
                <a class="page-link" href="#">&laquo;</a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">4</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">5</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">&raquo;</a>
            </li>
        </ul>
    </div>
</section>