@page
@model mehdiskan.web.Pages.Admin.BodyTypes.PageModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Edit body type";
}

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger">
        <i class="fa fa-exclamation-circle fa-fw"></i> @ViewData["Title"]
    </div>
}


<div class="card border-secondary mb-3">

    <div class="card-header text-capitalize">
        <i class="fa fa-plus fa-fw"></i> @ViewData["Title"]
    </div>

    <div class="card-body">

        <form method="post" autocomplete="off">


            <input type="hidden" asp-for="BodyType.BodyTypeId" />

            <!-- title -->
            <div class="form-group">
                <label class="form-control-label" asp-for="BodyType.Title"></label>
                <input type="text" asp-for="BodyType.Title" class="form-control" />

                <span asp-validation-for="BodyType.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-plus fa-fw"></i> Update
                </button>
            </div>

        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
